{
    "mcpServers": {
      "Framelink Figma MCP": {
        "command": "npx",
        "args": ["-y", "figma-developer-mcp", "--stdio"],
        "env": {
          "FIGMA_API_KEY": "${FIGMA_API_KEY}"
        }
      },
      "Official Figma MCP": {
        "type": "http",
        "url": "https://figma-mcp.figma.com",
        "env": {
          "FIGMA_ACCESS_TOKEN": "${FIGMA_ACCESS_TOKEN}"
        }
      }
    }
  }